{
  "name": "computer-resource-monitor",
  "version": "1.0.0",
  "description": "A desktop resource monitoring application",
  "main": "dist/main/main.js",
  "scripts": {
    "start": "npm run build:preload && concurrently \"npm run start:renderer\" \"npm run start:electron\"",
    "start:renderer": "webpack serve --mode development --config webpack.renderer.config.js",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "webpack --mode production --config webpack.renderer.config.js",
    "build:main": "webpack --mode production --config webpack.main.config.js",
    "build:preload": "webpack --mode production --config webpack.preload.config.js",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux"
  },
  "keywords": ["electron", "react", "resource-monitor", "system-monitor"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.42",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.5.4",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "systeminformation": "^5.21.20"
  },
  "build": {
    "appId": "com.resource.monitor",
    "productName": "ResourceMonitor",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "Utility"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    }
  }
}
